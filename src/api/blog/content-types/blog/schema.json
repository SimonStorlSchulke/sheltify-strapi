{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blogeintrag",
    "description": ""
  },
  "options": {
    "draftAndPublish": true,
    "populateCreatorFields": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "artikel": {
      "type": "dynamiczone",
      "components": [
        "article-section.text-with-image-section",
        "article-section.text",
        "article-section.animal-cards",
        "article-section.button-link",
        "article-section.hero",
        "article-section.image",
        "article-section.news-cards",
        "article-section.row-start",
        "article-section.section-start"
      ],
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "news",
        "wissen",
        "helferbericht",
        "blog"
      ]
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "showAsPopup": {
      "type": "boolean",
      "default": false,
      "required": false
    }
  }
}
